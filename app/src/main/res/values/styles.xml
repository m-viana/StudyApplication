<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Imagem circular com ShapeableImageView-->
    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--Text's-->
    <style name="textRegular">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="textTitleYellow">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="textDescription">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <!--Edit Text Layout-->
    <style name="textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/blue_accent</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <!--Fazer os InputEditText aqui-->

    <!--Buttons-->
    <style name="button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:backgroundTint">@color/yellow</item>
        <item name="android:elevation">2dp</item>
        <item name="android:text">Entrar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="CustomToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/yellow</item>
    </style>

</resources>